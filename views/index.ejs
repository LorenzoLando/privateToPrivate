<% include ./partials/header.ejs %>
<main role="main">

  <!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
  <h1 class="display-4 text-center">These are your posts so far..!</h1>
  <p class="lead text-center">Edit the posts acessing to the post specific page</p>
  <hr class="my-4">
  <p class="lead text-center">
    <a class="btn btn-primary btn-lg" href="posts/new" role="button">Add a Post</a>
  </p>
</div>
  <div class="container">
	<div class="row">
		<% posts.forEach((post) => { %>
			<div class="col-md-4"> 
			  
					<h2><%= post.title %></h2>
					<img id="indexImage" src="<%= post.image %>"><br>
				 	<p><%- post.post.substring(0, 100) %>...</p>
					<a class="btn btn-secondary"  href="/posts/<%= post._id %>" role="button">Read More</a>
				
			</div>  
			<% }); %>
	</div> 
</div>

</main>
    
<% include ./partials/footer.ejs %>